<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_item_scheduledNote_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/note"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_scheduledNote_txt"
        app:layout_constraintEnd_toStartOf="@+id/list_item_scheduledNote_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_scheduledNote_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_scheduledNote_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_scheduledNote_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_scheduledNote_icon"
        app:layout_constraintTop_toBottomOf="@+id/list_item_scheduledNote_title" />

    <ImageView
        android:id="@+id/list_item_scheduledNote_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item_scheduledNote_state"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_scheduledNote_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_scheduledNote_clock" />

</androidx.constraintlayout.widget.ConstraintLayout>